<Window x:Class="Client.Countries.AddIntlPortDialogBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add International Port" Height="192" Width="367"
        MinHeight="10"
        MinWidth="300"
        ResizeMode="CanResizeWithGrip"
        ShowInTaskbar="False"
        WindowStartupLocation="CenterOwner" 
        FocusManager.FocusedElement="{Binding ElementName=countryName}">
    <Grid>
        <Label Content="Country:" Height="28" HorizontalAlignment="Left" Margin="41,37,0,0" Name="label1" VerticalAlignment="Top" />
        <Button Content="Enter" Height="23" HorizontalAlignment="Left" Margin="167,118,0,0" Name="okButton" VerticalAlignment="Top" Width="75" IsDefault="True" Click="okButton_Click" />
        <Button Content="Cancel" Height="23" HorizontalAlignment="Right" Margin="0,118,12,0" Name="button1" VerticalAlignment="Top" Width="75" IsCancel="True" />
        <ComboBox Height="23" HorizontalAlignment="Left" Margin="122,42,0,0" Name="countries" VerticalAlignment="Top" Width="120" IsEditable="True" />
    </Grid>
</Window>
