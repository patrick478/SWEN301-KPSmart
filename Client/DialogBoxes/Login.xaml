<Window x:Class="Client.Countries.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="192" Width="367"
        MinHeight="10"
        MinWidth="300"
        ResizeMode="CanResizeWithGrip"
        ShowInTaskbar="False"
        WindowStartupLocation="CenterOwner" 
        FocusManager.FocusedElement="{Binding ElementName=userName}" Loaded="Window_Loaded">
    <Grid>
        <Label Content="Username" Height="28" HorizontalAlignment="Left" Margin="41,37,0,0" Name="label1" VerticalAlignment="Top" />
        <TextBox Height="23" HorizontalAlignment="Right" Margin="0,39,88,0" Name="userName" VerticalAlignment="Top" Width="120" AcceptsTab="True" />
        <Button Content="Submit" Height="23" HorizontalAlignment="Left" Margin="167,118,0,0" Name="okButton" VerticalAlignment="Top" Width="75" IsDefault="True" Click="okButton_Click" />
        <Button Content="Quit" Height="23" HorizontalAlignment="Right" Margin="0,118,12,0" Name="button1" VerticalAlignment="Top" Width="75" IsCancel="True" />
        <Label Content="Password" Height="28" HorizontalAlignment="Left" Margin="41,63,0,0" Name="label2" VerticalAlignment="Top" />
        <PasswordBox Height="23" HorizontalAlignment="Left" Margin="137,68,0,0" Name="passwordBox1" VerticalAlignment="Top" Width="120" />
    </Grid>
</Window>
